{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://team5892.com/schemas/2020/RobotMap.json",
    "definitions": {
        "MotorSpecs": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "VictorSP",
                        "VictorSPX",
                        "TalonSRX",
                        "SparkMax"
                    ]
                },
                "port": {
                    "type": "integer",
                    "minimum": 0
                },
                "inverted": {
                    "type": "boolean"
                },
                "mode": {
                    "type": "string",
                    "enum": [
                        "Brake",
                        "Coast",
                        "Drivelike"
                    ]
                }
            },
            "required": [
                "type",
                "port"
            ]
        },
        "MotorSpecs[]": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/MotorSpecs"
            }
        },
        "SolenoidGroup": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "integer",
                    "minimum": 0
                },
                "minItems": 1,
                "maxItems": 2
            }
        }
    },
    "type": "object",
    "properties": {
        "leftDrive": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "rightDrive": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "intakeRollers": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "intakePistons": {
            "$ref": "#/definitions/SolenoidGroup"
        },
        "accumulatorBelt": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "accumulatorKicker": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "accumulatorBallSensor": {
            "type": "integer",
            "minimum": 0
        },
        "shooterFlywheel": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "shooterHood": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "shooterHoodCounter": {
            "type": "integer",
            "minimum": 0
        },
        "shooterLowerLimit": {
            "type": "integer",
            "minimum": 0
        },
        "shooterUpperLimit": {
            "type": "integer",
            "minimum": 0
        },
        "wheelManipulator": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "wheelPiston": {
            "$ref": "#/definitions/SolenoidGroup"
        },
        "wheelCounter": {
            "type": "integer",
            "minimum": 0
        },
        "climbArm": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "climbWinch": {
            "$ref": "#/definitions/MotorSpecs[]"
        },
        "climbPiston": {
            "$ref": "#/definitions/SolenoidGroup"
        },
        "pressureSensor": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "leftDrive",
        "rightDrive",
        "intakeRollers",
        "intakePistons",
        "accumulatorBelt",
        "accumulatorKicker",
        "accumulatorBallSensor",
        "shooterFlywheel",
        "shooterHood",
        "shooterHoodCounter",
        "shooterLowerLimit",
        "shooterUpperLimit",
        "wheelManipulator",
        "wheelPiston",
        "wheelCounter",
        "climbArm",
        "climbWinch",
        "climbPiston",
        "pressureSensor"
    ],
    "additionalProperties": {
        "type": "string"
    }
}